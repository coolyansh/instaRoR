<h2>Post details</h2>

<h3><%= @post.caption %></h3>
<%= image_tag @post.photo.url(:large) %>

<p>
  <%= link_to 'Back To Home', posts_path %><br>
  <%= link_to 'Edit', edit_post_path(@post) %><br>
  <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post ?' } %><br>
</p>
